/* pages/sell/sell_form/sell_form.wxss */

.showInfo {
  margin-top: 56rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.sessionTitle {
  font-size: 36rpx;
  color: #384249;
  line-height: 22px;
  max-height: 54px;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}

.sessionName {
  font-size: 26rpx;
  color: #a2abb5;
}

.tickeCategory {
  font-size: 26rpx;
  color: #384249;
  margin-left: 30rpx;
  margin-top: 50rpx;
}

.ticketPrices {
  margin-left: 30rpx;
  margin-top: 36rpx;
  margin-right: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
  display: flex;
}

.price_normal {
  font-size: 24rpx;
  padding-left: 53rpx;
  padding-right: 53rpx;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  border: 4rpx solid #384249;
  border-radius: 6rpx;
  color: #384249;
  text-align: center;
  border-width: 1rpx;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
}

.price_select {
  background-color: #4bd4c5;
  font-size: 24rpx;
  padding-left: 53rpx;
  padding-right: 53rpx;
  padding-top: 26rpx;
  padding-bottom: 26rpx;
  border: 4rpx solid #4bd4c5;
  border-radius: 6rpx;
  color: #fff;
  text-align: center;
  border-width: 1rpx;
  margin-right: 24rpx;
  margin-bottom: 24rpx;
}

.ticketNumber {
  margin-top: 32rpx;
  border-radius: 6rpx;
  height: 82rpx;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  display: flex;
  margin-left: 30rpx;
  margin-right: 30rpx;
  border: 1rpx solid #384249;
}

.inputText {
  text-align: center;
  height: 82rpx;
}

.buttonSb {
  flex-direction: row;
  justify-content: center;
  display: flex;
  align-items: center;
  width: 140rpx;
  height: 82rpx;
  border-right: 1rpx solid #384249;
}

.buttonAdd {
  flex-direction: row;
  justify-content: center;
  display: flex;
  align-items: center;
  width: 140rpx;
  height: 82rpx;
  border-left: 1rpx solid #384249;
}
