/* pages/mine/mine/mine.wxss */

page {
  background-color: #efeff4;
}

.userInfo{
  background-color: #4bd4c5;
  height: 450rpx;
  flex-direction: column;
  display: flex;
  align-items:center;
  justify-content: center;
}
.userName{
  margin-top: 15pt;
  font: 32rpx;
  color: white;
}

.table{
  background-color: white;
  width: 100%;
}

.mineClass{
  justify-content: space-between;
  flex-direction: row;
  align-items: center;
  display: flex;
  margin-left: 30rpx;
  min-height: 88rpx;
}

.tableTitle{
  font-size: 26rpx;
  color: #556169;
}

.detailImage {
  width: 16rpx;
  height: 26rpx;
  margin-right: 30rpx;
}

.noneTicketSession {
  width: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover {
  width: 200rpx;
  height: 200rpx;
  border-radius: 100rpx;
  border-color: white;
}

.none_text {
  margin-top: 75rpx;
  text-align: center;
  font-size: 32rpx;
  color: #BBC1CB;
}
