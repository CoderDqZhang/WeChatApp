/* pages/mine/mine/mine.wxss */

page {
  background-color: #efeff4;
}

.ticketShowView {
  background-color: white;
  height: 100%;
}

.ticket_desc {
  margin-left: 30rpx;
  margin-right: 30rpx;
}

.show_title {
  font-size: 34rpx;
  margin-top: 30rpx;
  color: #384249;
  line-height: 44rpx;
  max-height: 108rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.show_detail {
  font-size: 26rpx;
  line-height: 34rpx;
  color: #8a96a2;
}

.ticket_id {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #bbc1cb;
  margin-bottom: 30rpx;
}

.ticket_wid {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: #bbc1cb;
  margin-bottom: 106rpx;
}

.show_session {
  margin-top: 26rpx;
  font-size: 26rpx;
  line-height: 30rpx;
  color: #8a96a2;
}

.ticket_status {
  margin-top: 26rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #8a96a2;
}

.ticket_waite_pay {
  margin-top: 26rpx;
  font-size: 26rpx;
  color: #4bd4c5;
}

.ticket_pay {
  flex-direction: row;
  display: flex;
  float: right;
  position: relative;
  margin-top: -86rpx;
  font-size: 26rpx;
  color: #bbc1cb;
  margin-bottom: 30rpx;
}

.cancel_button {
  padding-top: 14rpx;
  padding-bottom: 14rpx;
  border: 4rpx solid #4bd4c5;
  border-radius: 6rpx;
  color: #4bd4c5;
  text-align: center;
  border-width: 1rpx;
  width: 120rpx;
  margin-right: 20rpx;
}

.confim_button {
  padding-top: 14rpx;
  padding-bottom: 14rpx;
  border-radius: 6rpx;
  align-content: center;
  text-align: center;
  width: 120rpx;
  background-color: #4bd4c5;
  margin-right: 0px;
  color: #fff;
}

.noneTicketSession {
  width: 100%;
  height: 375px;
  background-color: white;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.cover {
  width: 143rpx;
  height: 210rpx;
}

.none_text {
  margin-top: 75rpx;
  text-align: center;
  font-size: 32rpx;
  color: #dde0e5;
}
