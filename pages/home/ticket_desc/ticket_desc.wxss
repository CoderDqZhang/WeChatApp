/* pages/home/ticket_desc/ticket_desc.wxss */
page {
  background-color: #efeff4;
}

.ticketSession{
  background-color: white;
}

.ticketNumber{
  background-color: white;
}

.tickets{
  margin-top: -3px;
  background-color: white;
}

.ticket_desc {
  width: 100%;
  margin-top: 0px;
  padding-top: 20px;
  flex-direction: row;
  height: 100%;
}

.ticketPost {
  margin-left: 15px;
  margin-top: 0px;
  width: 110px;
  border-radius: 1.5px;
  height: 150px;
  float: left;
}

.show_info {
  margin-left: 137px;
  position: relative;
  margin-right: 15px;
  height: 151px;
  margin-top: -12px;
}

.show_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #384249;
  font-size: 16px;
  margin-top: 12px;
  line-height: 22px;
}
.show_session{
  color: #a2abb5;
  line-height: 15px;
  font-size: 13px;
  margin-top: 5px;
}
.show_detail {
  color: #a2abb5;
  line-height: 17px;
  font-size: 13px;
}

.show_other {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.ticket_status {
  display: inline-block;
  background-color: #4bd4c5;
  color: #fff;
  padding-top: 1px;
  padding-left: 4px;
  padding-right: 4px;
  padding-bottom: 1px;
  border-radius: 2px;
  margin-right: 2px;
  font-size: 10px;
  margin-bottom: 6px;
}

.show_service {
  width: 100%;
}

.service {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
  line-height: 13px;
  margin-left: 1px;
  color: #4bd4c5;
}

.ticketNumber {
  width: 100%;
  height: 80px;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.ticket_number_info {
  font-size: 13px;
  margin-left: 15px;
  color: #384249;
  text-align: center;
}

.ticket_number {
  display: inline-block;
  position: relative;
  border: .5px solid #384249;
  border-radius: 3.0px;
  width: 140px;
  float: right;
  margin-right: 15px;
  align-content: center;
  text-align: center;
  vertical-align: middle;
}

.subtract {
  width: 44px;
  float: left;
  padding-top: 8px;
  padding-bottom: 8px;
  border-right: .5px solid #384249;
  align-content: center;
}

.add { 
  width: 44px;
  float: right;
  padding-top: 8px;
  padding-bottom: 8px;
  border-left: .5px solid #384249;
  align-content: center;
}

.number_text {
  height: 25px;
  line-height: 39px;
  width: 60px;
  font-size: 15px;
  text-align: center;
  color: #384249;
  overflow: hidden;
}

.ticket_tools {
  margin-left: 15px;
  margin-right: 15px;
  border: .5 solid #4bd4c5;
  background-color: white;
  flex-direction: row;
  display: flex;
  justify-content: center;
  align-items: center;
}

.tickets {
  width: 100%;
  height: 100%;
}

.ticket_normal_price {
  text-align: left;
  padding-top: 13px;
  padding-bottom: 13px;
  color: #8a96a2;
   width: 500px;
  font-size: 11px;
  height: 100%;
}

.ticket_row {
  height: 100%;
  text-align: center;
  color: #8a96a2;
  font-size: 12px;
  padding-top: 13px;
  padding-bottom: 13px;
   width: 500px;
  border-left: .5px solid #E9EBF2;
  border-right:.5px solid #E9EBF2; 
}

.ticket_now_price {
  text-align: right;
  color: #8a96a2;
  height: 100%;
  padding-top: 13px;
  padding-bottom: 13px;
  width: 500px;
  font-size: 12px;
}

.thin-border-right::before {
  border-width: 0;
  border-right-width: 1px;
}



.ticket_info{
  flex-direction: row;
  display: flex;
  padding-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  height: 29px;
}

.ticketInfos{
  height: 60px;
  width: 100%;
}

.ticket_normal_price_template {
  text-align: left;
  color: #384249;
  font-size: 13px;
  width: 500px;
}

.ticket_row_template {
  text-align: center;
  color: #8a96a2;
  width: 500px;
}

.ticket_row_type{
  color: #384249;
  font-size: 13px;
  line-height: 15px;
}

.ticket_deverliy_type{
  margin-top: 2px;
  color: #bbc1cb;
  font-size: 10px;
}

.ticket_price_template {
  text-align: right;
  width: 500px;
}

.ticket_now_price_template{
    color: #4bd4c5;
    margin-bottom: 1px;
    height: 14px;
    line-height: 15px;
    font-size: 14px;
}

.ticket_status_number{
  display: inline-block;
  background-color: #4bd4c5;
  color: #fff;
  padding-top: 1px;
  padding-left: 4px;
  padding-right: 4px;
  padding-bottom: 1px;
  border-radius: 2px;
  margin-right: 2px;
  font-size: 10px;
  margin-top: -4px;
}