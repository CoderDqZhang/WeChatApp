/* pages/home/ticket_desc/ticket_desc.wxss */

.ticket_desc {
  width: 100%;
  margin-top: 0px;
  padding-top: 20px;
  flex-direction: row;
  height: 130px;
}

.ticketPost {
  margin-left: 15px;
  margin-top: 0px;
  width: 110px;
  border-radius: 3px;
  height: 150px;
  float: left;
}

.show_info {
  margin-left: 137px;
  position: relative;
  margin-right: 15px;
  height: 150px;
  margin-top: -12px;
}

.show_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #384249;
  font-size: 16px;
  margin-top: 12px;
  line-height: 18px;
}

.show_time {
  color: #a2abb5;
  font-size: 13px;
}

.show_location {
  color: #a2abb5;
  font-size: 13px;
}

.show_other {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
}

.ticket_status {
  display: inline-block;
  background-color: #4bd4c5;
  color: #fff;
  padding-top: 1px;
  padding-left: 4px;
  padding-right: 4px;
  padding-bottom: 1px;
  border-radius: 2px;
  margin-right: 2px;
  font-size: 10px;
  margin-bottom: 3px;
}

.show_service {
  width: 100%;
}

.service {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 12px;
  line-height: 13px;
  color: #4bd4c5;
}

.ticketNumber {
  width: 100%;
  height: 80px;
  margin-top: 20px;
  display: inline-block;
}

.ticket_number_info {
  font-size: 13px;
  color: #384249;
  margin-top: 12px;
  text-align: center;
}

.ticket_other {
  margin-top: 22.5px;
  margin-left: 15px;
  margin-right: 15px;
  height: 34px;
}

.ticket_number {
  display: inline-block;
  position: relative;
  width: 140px;
  float: right;
  align-content: center;
  text-align: center;
  vertical-align: middle;
}

.subtract {
  height: 34px;
  width: 40px;
  float: left;
  padding-top: 0px;
  align-content: center;
}

.add {
  height: 34px;
  width: 40px;
  float: right;
  padding-top: 0px;
  align-content: center;
}

.number_text {
  height: 34px;
  line-height: 34px;
  width: 60px;
  text-align: center;
  color: #384249;
  overflow: hidden;
}

.ticket_tools {
  padding-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  height: 29px;
  flex-direction: row;
  display: flex;
}

.tickets {
  padding-top: 3px;
  width: 100%;
}

.ticket_normal_price {
  text-align: left;
  color: #8a96a2;
  font-size: 12px;
  width: 500px;
}

.ticket_row {
  text-align: center;
  color: #8a96a2;
  font-size: 12px;
  width: 500px;
}

.ticket_now_price {
  text-align: right;
  color: #8a96a2;
  font-size: 12px;
  width: 500px;
}

.thin-border-right::before {
  border-width: 0;
  border-right-width: 1px;
}



.ticket_info{
  flex-direction: row;
  display: flex;
  padding-top: 15px;
  margin-left: 15px;
  margin-right: 15px;
  height: 29px;
}

.ticketInfos{
  height: 60px;
  width: 100%;
}

.ticket_normal_price_template {
  text-align: left;
  color: #384249;
  font-size: 13px;
  width: 500px;
}

.ticket_row_template {
  text-align: center;
  color: #8a96a2;
  width: 500px;
}

.ticket_row_type{
  color: #384249;
  font-size: 13px;
}

.ticket_price_template {
  text-align: right;
  width: 500px;
}

.ticket_now_price_template{
    color: #4bd4c5;
    font-size: 14px;
}
