/* pages/home/ticket_form/ticket_form.wxss */
page {
  background-color: #efeff4;
}

.ticketSession{
  background-color: white;
}

.ticket_desc {
  width: 100%;
  margin-top: 0px;
  flex-direction: row;
  display: flex;
  min-height: 185px;
}

.show_cover{
  width: 95px;
  height: 100%;
}

.ticketPost {
  margin-left: 15px;
  margin-top: 15px;
  margin-bottom: 15px;
  width: 80px;
  border-radius: 3px;
  height: 105px;
}

.show_info {
  margin-left: 10px;
  margin-right: 15px;
}

.show_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #384249;
  font-size: 16px;
  margin-top: 15px;
  line-height: 22px;
}
.show_session{
  color: #a2abb5;
  font-size: 13px;
  margin-top: 5px;
  line-height: 18px;
}
.show_detail {
  color: #a2abb5;
  font-size: 13px;
  line-height: 18px;
}

.show_detail_much{
  color: #a2abb5;
  font-size: 13px;
  line-height: 18px;
  margin-bottom: 15px;
}

.cell_title_info_image {
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: white;
  display: flex;
  height: 44px;
  padding-left: 15px;
  padding-right: 15px
}

.cell_title_info_image_address{
  flex-direction: row;
  justify-content: center;
  background-color: white;
  display: flex;
  align-items: center;
  height: 44px;
  padding-left: 15px;
  padding-right: 15px
}

.title {
  width: 300px;
  font-size: 15px;
  color: #384249;
}

.detail {
  width: 300px;
  margin-right: 6px;
  text-align: right;
  font-size: 15px;
  color: #8a96a2;
  letter-spacing: 0;
}

.detail_much{
  width: 300px;
  margin-right: 6px;
  text-align: right;
  font-size: 15px;
  color: #384249;
  letter-spacing: 0;
}

.detail_image {
  margin-top: -3px;
  width: 8px;
  height: 13px;
}

.title_address {
  width: 100%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  font-size: 15px;
  color: #384249;
}

.title_input {
  flex-direction: row;
  justify-content: center;
  display: flex;
  align-items: center;
  height: 44px;
  width: 100%;
}

.input_title {
  margin-left: 15px;
  font-size: 15px;
  width: 115px;
  color: #384249;
}

.input_text {
  margin-top: 15px;
  width: 100%;
}

.cell_input {
  padding-top: 11px;
  padding-left: 15px;
  padding-right: 15px;
  background-color: white;
  height: 75px;
  font-size: 15px;
  color: #bbc1cb;
  letter-spacing: 0;
}

.bottomView {
  background-color: #efeff4;
  width: 100%;
}

.introduct {
  padding-top: 13px;
  margin-top: 13px;
  margin-left: 15px;
  font-size: 13px;
  color: #bbc1cb;
}

.confim {
  border-radius: 3.0px;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 30px;
  background-color: #4bd4c5;
  font-size: 15px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  padding-top: 4px;
  padding-bottom: 4px;
  border: none;
  border-color: #4bd4c5;
}
