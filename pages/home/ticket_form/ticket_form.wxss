/* pages/home/ticket_form/ticket_form.wxss */

.ticket_desc {
  width: 100%;
  margin-top: 0px;
  padding-top: 20px;
  flex-direction: row;
  height: 170px;
}

.ticketPost {
  margin-left: 15px;
  margin-top: 0px;
  width: 110px;
  border-radius: 3px;
  height: 150px;
  float: left;
}

.show_info {
  margin-left: 137px;
  position: relative;
  margin-right: 15px;
  height: 170px;
  margin-top: -12px;
}

.show_title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  color: #384249;
  font-size: 16px;
  margin-top: 12px;
  margin-bottom: 5px;
  line-height: 18px;
}

.show_detail {
  color: #a2abb5;
  font-size: 13px;
}

.cell_title_info_image {
  flex-direction: row;
  display: flex;
  padding-top: 15px;
  padding-bottom: 10px;
  margin-left: 15px;
  margin-right: 15px;
  height: 29px;
}

.cell_title_info_image_address{
  flex-direction: row;
  display: flex;
  padding-top: 15px;
  padding-bottom: 15px;
  margin-left: 15px;
  margin-right: 15px;
}

.title {
  width: 300px;
  font-size: 15px;
  color: #384249;
}

.detail {
  width: 300px;
  margin-right: 6px;
  text-align: right;
  font-size: 15px;
  color: #8a96a2;
  letter-spacing: 0;
}

.detail_image {
  width: 8px;
  height: 13px;
}

.title_address {
  width: 100%;
  font-size: 15px;
  color: #384249;
}

.title_input {
  display: inline-block;
  height: 44px;
  width: 100%;
}

.input_title {
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 5px;
  float: left;
  font-size: 15px;
  color: #384249;
  letter-spacing: 0;
}

.input_text {
  float: left;
  width: 90%;
  margin-top: 15px;
  margin-right: 30px;
}

.cell_input {
  padding-top: 11px;
  margin-left: 15px;
  margin-right: 15px;
  height: 75px;
  font-size: 15px;
  color: #bbc1cb;
  letter-spacing: 0;
}

.bottomView {
  background-color: #efeff4;
  height: 200px;
  width: 100%;
}

.introduct {
  padding-top: 13px;
  margin-top: 13px;
  margin-left: 15px;
  font-size: 13px;
  color: #bbc1cb;
}

.confim {
  border-radius: 3.0px;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 30px;
  background-color: #4bd4c5;
  font-size: 15px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  padding-top: 4px;
  padding-bottom: 4px;
}
