/* pages/home/order_deliver/order_deliver.wxss */
page {
  background-color: #efeff4;
}

.order_info{
    background-color: white;
    flex-direction: column;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.title{
    font-size: 26rpx;
    color: #384249;
    margin-left: 30rpx;
    margin-top: 40rpx;
}

.detail_info{
    font-size: 26rpx;
    color: #A2ABB5;
    margin-top: 16rpx;
    margin-left: 30rpx;
    margin-bottom: 40rpx;
}
.detail_title{
    margin-top: 8rpx;
}

.cell_title_info_image {
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  display: flex;
  height: 88rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.title_section {
  margin-left: 30rpx;
  font-size: 30rpx;
  color: #384249;
}

.detail {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 500rpx;
  margin-right: 12rpx;
  text-align: right;
  font-size: 30rpx;
  color: #8a96a2;
  letter-spacing: 0;
}

.detail_image {
  margin-top: -18rpx;
  width: 16rpx;
  height: 26rpx;
}

.deliverText{
    text-align: right;
    margin-right: 30rpx;

}

.next {
  text-align: center;
  font-size: 30rpx;
  padding-top: 28rpx;
  width: 100%;
  height: 68rpx;
  background-color: #4bd4c5;
  color: white;
  position: absolute;
  bottom: 0;
}