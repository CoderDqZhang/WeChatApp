.title_input {
  display: inline-block;
  height: 44px;
  width: 100%;
}

.title {
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 5px;
  float: left;
  font-size: 15px;
  color: #384249;
  letter-spacing: 0;
}

.detail_input {
  display: inline-block;
  height: 75px;
  width: 100%;
}

.detail_title {
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 5px;
  float: left;
  font-size: 15px;
  color: #384249;
  letter-spacing: 0;
}

.picke_input {
  display: inline-block;
  height: 44px;
  width: 100%;
}

.detail_text {
  margin-top: 3px;
  height: 42px;
}

.section {
  width: 90%;
