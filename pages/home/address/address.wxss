/* pages/home/address/address.wxss */
page {
  background-color: #efeff4;
}
.title_input {
  flex-direction: row;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  height: 44px;
  width: 100%;
}

.title {
  margin-right: 15px;
  float: left;
  margin-left: 15px;
  font-size: 15px;
  color: #384249;
  letter-spacing: 0;
}

.title_phone{
  margin-right: 29px;
  float: left;
  margin-left: 15px;
  font-size: 15px;
  color: #384249;
  letter-spacing: 0;
}

.detail_input {
  background-color: white;
  display: inline-block;
  height: 75px;
  width: 100%;
}

.detail_title {
  margin-top: 15px;
  margin-left: 15px;
  margin-right: 5px;
  float: left;
  font-size: 15px;
  color: #384249;
}

.picke_input {
  background-color: white;
  flex-direction: row;
  display: flex;
  height: 44px;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.detail_text {
  position: absolute;
  margin-top: 3px;
  margin-left: 108px;
  width: 50%;
  height: 42px;
}

.picket {
  font-size: 15px;
  color: #384249;
  width: 100%;
  letter-spacing: 0;
}

.picketunSelect{
  font-size: 15px;
  color: #BBC1CB;
  width: 100%;
  letter-spacing: 0;
}

.picket_select {
  width: 100%;
}

.input_text {
  margin-left: 4px;
  /*background-color: #4bd4c5;*/
  margin-right: 30px;
}

.region_text {
  margin-top: 15px;
  font-size: 15px;
  float: left;
  color: #bbc1cb;
  letter-spacing: 0;
}

.detailImage {
  margin-right: 15px;
  width: 8px;
  height: 13px;
}

.confirm {
  border-radius: 3.0px;
  margin-left: 15px;
  margin-right: 15px;
  margin-top: 30px;
  background-color: #4bd4c5;
  font-size: 15px;
  color: #fff;
  letter-spacing: 0;
  text-align: center;
  padding-top: 4px;
  padding-bottom: 4px;
  border-color: #4bd4c5;
  border-width:0px;
}

.bottom {
  background-color: #efeff4;
  position: absolute;
  height: 100%;
  margin-top: 0px;
  width: 100%;
}
