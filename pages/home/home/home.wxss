/* pages/home/home.wxss */

/** wxss **/

/** 修改默认的navigator点击态 **/

page {
  background-color: #efeff4;
}

.navigator-hover {
  color: blue;
}

/** 自定义其他点击态样式类 **/

.category_info {
  height: 160rpx;
  margin-left: 30rpx;
  flex-direction: row;
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e9ebf2;
  border-right: 1rpx solid #e9ebf2;
}

.category_infol {
  height: 160rpx;
  margin-left: 30rpx;
  margin-right: 0px;
  flex-direction: row;
  margin-top: 14rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-right: 1rpx solid #e9ebf2;
}

.category_infos {
  height: 160rpx;
  margin-left: 0px;
  margin-top: 14rpx;
  margin-right: 30rpx;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #e9ebf2;
}

.photo {
  width: 57rpx;
  height: 77rpx;
  margin-top: 20rpx;
  border-radius: 4rpx;
  margin-right: 30rpx;
}

.photos {
  width: 57rpx;
  height: 77rpx;
  margin-top: 15rpx;
  border-radius: 4rpx;
  margin-right: 0px;
}

.categotyInfo{
  margin-top: 18rpx;
}

.categotyInfos {
  margin-top: 18rpx;
  margin-left: 30rpx;
}

.other-navigator-hover {
  color: red;
}

.category {
  width: 50%;
  height: 142rpx;
  margin-top: 6rpx;
  display: inline-block;
}

.sessionTitle {
  padding-top: 34rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-bottom: 20rpx;
}

.topSession{
  height: 500rpx;
  background-color: white;
}

.ticketSession{
  margin-top: -10rpx;
  background-color: white;
}

.title {
  font-weight: 500;
  color: #384249;
  font-size: 30rpx;
}

.subtitle {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  color: #bbc1cb;
  margin-right: 15px;
  font-size: 24rpx;
}

.sessionTitle {
  font-family: SFUIText-Regular;
  color: #a2abb5;
  font-size: 26rpx;
  margin-left: 30rpx;
  margin-top: 34rpx;
}

.product_image {
  opacity: 0;
  width: 100%;
  height: 70%;
  transition: opacity 1s linear 2s;
}

.ticketText {
  padding-top: 4rpx;
  text-align: center;
}

.loaded {
  opacity: 1;
}

.noneTicketSession {
  width: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.none_covers {
  width: 136rpx;
  height: 190rpx;
}

.none_text {
  margin-top: 75rpx;
  text-align: center;
  font-size: 32rpx;
  color: #BBC1CB;
}

.searchContent{
  height: 88rpx;
  background-color: #EFEFF4;
  flex-direction: row;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.inputText{
  padding-left: 30rpx;
  background-color: white;
  border-radius: 10rpx;
  height: 56rpx;
  color: #384249;
  border: 1rpx solid #e6e6ea;
  font-size: 26rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
  
}

.cancelClass{
  width: 70rpx;
  margin-right: 18rpx;
  font-size: 32rpx;
  color: #4bd4c5;
}

.historyClass{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  min-height: 100rpx;
}

.searchText{
  margin-left: 20rpx;
  font-size: 26rpx;
  color: #384249;
}

.searchClass{
  flex-direction: row;
  display: flex;
  align-items: center;
}

.Icon_info{
  width: 26rpx;
  height: 26rpx;
  margin-left: 30rpx;
}

.Close_Info{
  width: 26rpx;
  height: 26rpx;
  margin-right: 30rpx;
}

.header_view{
  background-color: #4bd4c5;
  height: 355rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.photo_cover{
  height: 132rpx;
  width: 132rpx;
  border-radius: 66rpx;
  border-color: white;
  margin-top: 8rpx;
}

.user_name{
  margin-top: 34rpx;
  color: white;
  font-size: 38rpx;
}

.tags{
  margin-top: 24rpx;
  flex-direction: row;
  display: flex;
  margin-left: 18rpx;
  justify-content: center;
  align-items: center;
}

.tag{
  border: 2rpx solid #FFFFFF;
  border-radius: 4rpx;
  padding-left: 21rpx;
  padding-right: 21rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  font-size: 22rpx;
  color: white;
  margin-right: 18rpx;
}

.none_cover {
  width: 136rpx;
  height: 190rpx;
}

.none_text {
  margin-top: 75rpx;
  text-align: center;
  font-size: 32rpx;
